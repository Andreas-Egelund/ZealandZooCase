@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<h3 class="alert-danger">@Model.Error</h3>
<div class="opening-hours-banner" style="background-color: rebeccapurple; color: white; padding: 10px; text-align: center; width: 100%; box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
    <p style="margin: 0; font-size: 16px; font-weight: bold;">FREDAGSBAR</p>
    <p style="margin: 0; font-size: 16px; font-weight: bold;">@Model.OpenHour.OpenHoursDate.ToString("dd MMMM, yyyy") </p>
    <p style="margin: 0; font-size: 16px; font-weight: bold;">@Model.OpenHour.OpenHoursStart - @Model.OpenHour.OpenHoursEnd </p>
</div>






<div class="container d-flex flex-column align-items-center justify-content-center vh-100 bg-warning-subtle text-center p-5 rounded-4 shadow-lg">
    <div class="text-center">
        <h1 class="display-4">🎉Welcome To Zealand Zoo🎉</h1>
    </div>
    <p class="lead text-dark mb-4">Would you like to login or continue as a guest?</p>

    <div class="d-grid gap-3 col-12 col-sm-6 col-md-4 mx-auto">

        <form method="get" asp-page="/AccountPages/LoginPage">
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
        </form>

        <form method="get" asp-page="/AccountPages/Register">
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-success btn-lg w-100">Register</button>
        </form>

        <form method="post">
            <button type="submit" asp-page-handler="ContinueAsGuest" class="btn btn-danger btn-lg w-100">Continue as Guest</button>
        </form>

    </div>
</div>
