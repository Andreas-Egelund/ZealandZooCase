@page
@model ZealandZooCase.Pages.AdminFolder.EventCrud.IndexModel

@{
    ViewData["Title"] = "Events";
}

<h1 style="text-align: center; color: #2c3e50;">Events</h1>

<p style="text-align: right; margin-bottom: 20px;">
    <a asp-page="Create" style="padding: 10px 15px; background-color: #3498db; color: white; text-decoration: none; border-radius: 5px;">Create New</a>
</p>

<table style="width: 100%; border-collapse: collapse; font-family: Arial, sans-serif;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.OurEvent[0].EventName)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.OurEvent[0].EventDescription)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.OurEvent[0].EventDate)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.OurEvent[0].EventMaxAttendance)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.OurEvent[0].EventTicketPrice)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.OurEvent[0].Address)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OurEvent)
        {
            <tr>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.EventDescription)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.EventMaxAttendance)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.EventTicketPrice)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Address.Street)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    <div style="display: flex; gap: 8px; justify-content: center; flex-wrap: wrap;">
                        <a asp-page="./Edit" asp-route-id="@item.EventId"
                           style="padding: 6px 12px; background-color: #3498db; color: white; text-decoration: none; border-radius: 5px;">
                            Edit
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.EventId"
                           style="padding: 6px 12px; background-color: #7f8c8d; color: white; text-decoration: none; border-radius: 5px;">
                            Details
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.EventId"
                           style="padding: 6px 12px; background-color: #e74c3c; color: white; text-decoration: none; border-radius: 5px;">
                            Delete
                        </a>
                    </div>
                </td>


            </tr>
        }
    </tbody>
</table>
