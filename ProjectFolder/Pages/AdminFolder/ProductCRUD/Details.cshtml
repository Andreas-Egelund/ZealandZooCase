@page
@model ZealandZooCase.Pages.AdminFolder.ProductCRUD.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1 style="text-align: center; color: #2c3e50;">Product Details</h1>

<div style="max-width: 600px; margin: 0 auto; font-family: Arial, sans-serif;">
    <h4 style="color: #34495e; margin-top: 30px;">Product</h4>
    <hr style="margin-bottom: 20px;" />
    <dl style="display: flex; flex-wrap: wrap;">
        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">@Html.DisplayNameFor(model => model.Product.ProductName)</dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">@Html.DisplayFor(model => model.Product.ProductName)</dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">@Html.DisplayNameFor(model => model.Product.Quantity)</dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">@Html.DisplayFor(model => model.Product.Quantity)</dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">@Html.DisplayNameFor(model => model.Product.Price)</dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">@Html.DisplayFor(model => model.Product.Price)</dd>
    </dl>

    <div style="margin-top: 30px; text-align: center;">
        <a asp-page="./Edit" asp-route-id="@Model.Product.ProductId" style="padding: 10px 15px; background-color: #3498db; color: white; text-decoration: none; border-radius: 5px; margin-right: 10px;">Edit</a>
        <a asp-page="./Index" style="padding: 10px 15px; background-color: #95a5a6; color: white; text-decoration: none; border-radius: 5px;">Back to List</a>
    </div>
</div>
