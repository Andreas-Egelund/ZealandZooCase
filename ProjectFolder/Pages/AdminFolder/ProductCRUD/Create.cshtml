@page
@model ZealandZooCase.Pages.AdminFolder.ProductCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
}
<h1 style="text-align: center; color: #2c3e50;">Create New Product</h1>

<div style="max-width: 600px; margin: 0 auto; font-family: Arial, sans-serif;">
    <h4 style="color: #34495e;">Product</h4>
    <hr style="margin-bottom: 20px;" />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 15px;"></div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="Product.ProductName" class="control-label" style="font-weight: bold;"></label>
            <input asp-for="Product.ProductName" class="form-control" style="width: 100%; padding: 8px;" />
            <span asp-validation-for="Product.ProductName" class="text-danger" style="font-size: 0.9em;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="Product.Quantity" class="control-label" style="font-weight: bold;"></label>
            <input asp-for="Product.Quantity" class="form-control" style="width: 100%; padding: 8px;" />
            <span asp-validation-for="Product.Quantity" class="text-danger" style="font-size: 0.9em;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label asp-for="Product.Price" class="control-label" style="font-weight: bold;"></label>
            <input asp-for="Product.Price" class="form-control" style="width: 100%; padding: 8px;" />
            <span asp-validation-for="Product.Price" class="text-danger" style="font-size: 0.9em;"></span>
        </div>

        <div class="form-group" style="text-align: center;">
            <input type="submit" value="Create" style="padding: 10px 20px; background-color: #3498db; color: white; border: none; border-radius: 5px;" />
        </div>
    </form>

    <div style="text-align: center; margin-top: 20px;">
        <a asp-page="Index" style="color: #3498db; text-decoration: none;">&#8592; Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
