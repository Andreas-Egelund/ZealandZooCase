@page
@model ZealandZooCase.Pages.AdminFolder.ProductCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center; color: #2c3e50;">Our Products</h1>

<p style="text-align: right; margin-bottom: 20px;">
    <a asp-page="Create" style="padding: 10px 15px; background-color: #3498db; color: white; text-decoration: none; border-radius: 5px;">Create New</a>
</p>

<table style="width: 100%; border-collapse: collapse; font-family: Arial, sans-serif;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Product[0].ProductName)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Product[0].Quantity)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th style="padding: 10px; border: 1px solid #ddd;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td style="padding: 10px; border: 1px solid #ddd; text-align: center;">
                    <a asp-page="./Edit" asp-route-id="@item.ProductId"
                       style="padding: 6px 12px; background-color: #3498db; color: white; text-decoration: none; border-radius: 5px; margin-right: 5px; display: inline-block;">
                        Edit
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.ProductId"
                       style="padding: 6px 12px; background-color: #7f8c8d; color: white; text-decoration: none; border-radius: 5px; margin-right: 5px; display: inline-block;">
                        Details
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.ProductId"
                       style="padding: 6px 12px; background-color: #e74c3c; color: white; text-decoration: none; border-radius: 5px; display: inline-block;">
                        Delete
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
