@page
@model ZealandZooCase.Pages.AdminFolder.UserCRUD.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align: center; color: #2c3e50;">User Details</h1>

<div style="max-width: 700px; margin: 0 auto; font-family: Arial, sans-serif;">
    <h4 style="color: #34495e;">User</h4>
    <hr style="margin-bottom: 20px;" />

    <dl style="display: flex; flex-wrap: wrap;">
        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">@Html.DisplayNameFor(model => model.User.UserName)</dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">@Html.DisplayFor(model => model.User.UserName)</dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">@Html.DisplayNameFor(model => model.User.UserEmail)</dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">@Html.DisplayFor(model => model.User.UserEmail)</dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">@Html.DisplayNameFor(model => model.User.UserPassword)</dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">@Html.DisplayFor(model => model.User.UserPassword)</dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">@Html.DisplayNameFor(model => model.User.UserIsAdmin)</dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">@Html.DisplayFor(model => model.User.UserIsAdmin)</dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">@Html.DisplayNameFor(model => model.User.UserNewsletter)</dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">@Html.DisplayFor(model => model.User.UserNewsletter)</dd>
    </dl>

    <div style="text-align: center; margin-top: 30px;">
        <a asp-page="./Edit" asp-route-id="@Model.User.UserId"
           style="padding: 10px 15px; background-color: #3498db; color: white; text-decoration: none; border-radius: 5px; margin-right: 10px;">Edit</a>
        <a asp-page="./Index"
           style="padding: 10px 15px; background-color: #95a5a6; color: white; text-decoration: none; border-radius: 5px;">Back to List</a>
    </div>
</div>

<hr style="margin: 40px 0;" />
<h2 style="text-align: center; color: #2c3e50;">Registered Events</h2>

<div class="row" style="font-family: Arial, sans-serif; display: flex; flex-wrap: wrap; justify-content: center;">
    @foreach (var item in Model.TilmeldteEvents)
    {
        <div style="flex: 1 0 200px; max-width: 220px; margin: 10px;">
            <div style="border: 1px solid #ddd; border-radius: 8px; padding: 15px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); height: 100%;">
                <h5 style="text-align: center; font-size: 1.1rem; color: #34495e;">Event Ticket</h5>
                <div style="text-align: center; margin-bottom: 10px;">
                    <img src="/Images/@item.Event.EventImageName" alt="Event image" style="max-height: 80px; max-width: 100%; object-fit: contain;" />
                </div>
                <hr style="margin: 10px 0;" />
                <ul style="list-style: none; padding: 0; font-size: 0.9rem;">
                    <li><strong>Event:</strong> @item.Event.EventName</li>
                    <li><strong>Åbningstid:</strong> @item.Event.EventDate.ToString("dd/MM/yyyy HH:mm")</li>
                    <li><strong>Price:</strong> @item.Event.EventTicketPrice.ToString("F2") DKK</li>
                </ul>
            </div>
        </div>
    }
</div>