@page
@model ZealandZooCase.Pages.AdminFolder.UserCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
}


<h1 style="text-align: center; color: #2c3e50;">Edit User</h1>

<div style="max-width: 600px; margin: 0 auto; font-family: Arial, sans-serif;">
    <h4 style="color: #34495e;">User</h4>
    <hr style="margin-bottom: 20px;" />

    <form method="post">
        <input type="hidden" asp-for="User.UserId" />
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 15px;"></div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="User.UserName" style="font-weight: bold;"></label>
            <input asp-for="User.UserName" class="form-control" />
            <span asp-validation-for="User.UserName" class="text-danger" style="font-size: 0.9em;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="User.UserEmail" style="font-weight: bold;"></label>
            <input asp-for="User.UserEmail" class="form-control" />
            <span asp-validation-for="User.UserEmail" class="text-danger" style="font-size: 0.9em;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="User.UserPassword" style="font-weight: bold;"></label>
            <input asp-for="User.UserPassword" class="form-control" />
            <span asp-validation-for="User.UserPassword" class="text-danger" style="font-size: 0.9em;"></span>
        </div>

        <div class="form-group form-check" style="margin-bottom: 15px;">
            <input class="form-check-input" asp-for="User.UserIsAdmin" id="UserIsAdmin" />
            <label class="form-check-label" for="UserIsAdmin" style="margin-left: 5px;">
                @Html.DisplayNameFor(model => model.User.UserIsAdmin)
            </label>
        </div>

        <div class="form-group form-check" style="margin-bottom: 20px;">
            <input class="form-check-input" asp-for="User.UserNewsletter" id="UserNewsletter" />
            <label class="form-check-label" for="UserNewsletter" style="margin-left: 5px;">
                @Html.DisplayNameFor(model => model.User.UserNewsletter)
            </label>
        </div>

        <div style="text-align: center;">
            <input type="submit" value="Save" style="padding: 10px 20px; background-color: #3498db; color: white; border: none; border-radius: 5px;" />
        </div>
    </form>

    <div style="text-align: center; margin-top: 20px;">
        <a asp-page="./Index" style="color: #3498db; text-decoration: none;">&#8592; Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
