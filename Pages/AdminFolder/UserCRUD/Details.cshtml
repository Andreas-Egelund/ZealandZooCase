@page
@model ZealandZooCase.Pages.AdminFolder.UserCRUD.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserPassword)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserPassword)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserIsAdmin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserIsAdmin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserNewsletter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserNewsletter)
        </dd>
    </dl>
</div>



<h2>Tilmeldte Events</h2>
<div class="row">
    @foreach (var item in Model.TilmeldteEvents)
    {
        <div class="col-6 col-sm-4 col-md-3 col-lg-2 p-2">
            <div class="card shadow-sm h-100" style="font-family: monospace; font-size: 0.85rem;">
                <div class="card-body p-2">
                    <h5 class="card-title text-center mb-2" style="font-size: 1rem;">Event Ticket</h5>
                    <div class="text-center mb-2">
                        <img src="/Images/@item.Event.EventImageName" class="img-fluid" style="max-height: 80px;" alt="Event image">
                    </div>
                    <hr class="my-2">
                    <ul class="list-unstyled mb-2">
                        <li><strong>Event:</strong> @item.Event.EventName</li>
                        <li><strong>Åbningstid:</strong> @item.Event.EventDate.ToString("dd/MM, yyyy HH:mm")</li>
                        <li><strong>Price:</strong> @item.Event.EventTicketPrice.ToString("F2") dkk</li>
                    </ul>
                    <hr class="my-2">
                </div>
            </div>
        </div>
    }
</div>







<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.UserId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
