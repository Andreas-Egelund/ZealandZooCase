@page
@model ZealandZooCase.Pages.AdminFolder.EventCrud.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align: center; color: #2c3e50;">Event Details</h1>

<div style="max-width: 800px; margin: 0 auto; font-family: Arial, sans-serif;">
    <h4 style="color: #34495e;">Event Information</h4>
    <hr style="margin-bottom: 20px;" />

    <dl style="display: flex; flex-wrap: wrap;">
        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">
            @Html.DisplayNameFor(model => model.OurEvent.EventName)
        </dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">
            @Html.DisplayFor(model => model.OurEvent.EventName)
        </dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">
            @Html.DisplayNameFor(model => model.OurEvent.EventDescription)
        </dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">
            @Html.DisplayFor(model => model.OurEvent.EventDescription)
        </dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">
            @Html.DisplayNameFor(model => model.OurEvent.EventDate)
        </dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">
            @Html.DisplayFor(model => model.OurEvent.EventDate)
        </dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">
            @Html.DisplayNameFor(model => model.OurEvent.EventMaxAttendance)
        </dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">
            @Html.DisplayFor(model => model.OurEvent.EventMaxAttendance)
        </dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">
            @Html.DisplayNameFor(model => model.OurEvent.EventTicketPrice)
        </dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">
            @Html.DisplayFor(model => model.OurEvent.EventTicketPrice)
        </dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">
            @Html.DisplayNameFor(model => model.OurEvent.EventImageName)
        </dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">
            @Html.DisplayFor(model => model.OurEvent.EventImageName)
        </dd>

        <dt style="flex: 0 0 30%; font-weight: bold; padding: 8px 0;">
            @Html.DisplayNameFor(model => model.OurEvent.Address)
        </dt>
        <dd style="flex: 0 0 70%; padding: 8px 0;">
            @($"{Model.OurEvent.Address.Street}, {Model.OurEvent.Address.AddressPostalcodeNavigation.City}, {Model.OurEvent.Address.AddressPostalcodeNavigation.State}, {Model.OurEvent.Address.AddressPostalcodeNavigation.Country}")
        </dd>
    </dl>

    <div style="text-align: center; margin-top: 30px;">
        <a asp-page="./Edit" asp-route-id="@Model.OurEvent.EventId"
           style="padding: 10px 15px; background-color: #3498db; color: white; text-decoration: none; border-radius: 5px; margin-right: 10px;">Edit</a>
        <a asp-page="./Index"
           style="padding: 10px 15px; background-color: #95a5a6; color: white; text-decoration: none; border-radius: 5px;">Back to List</a>
    </div>
</div>
