@page
@model ZealandZooCase.Pages.AdminFolder.AddressCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align: center; color: #2c3e50;">Edit Address</h1>

<div style="max-width: 600px; margin: 0 auto; font-family: Arial, sans-serif;">
    <h4 style="color: #34495e;">Address</h4>
    <hr style="margin-bottom: 20px;" />

    <form method="post">
        <input type="hidden" asp-for="Address.AddressId" />
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 15px;"></div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="Address.Street" style="font-weight: bold;"></label>
            <input asp-for="Address.Street" class="form-control" />
            <span asp-validation-for="Address.Street" class="text-danger" style="font-size: 0.9em;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label asp-for="Address.AddressPostalcode" style="font-weight: bold;"></label>
            <select asp-for="Address.AddressPostalcode" class="form-control" asp-items="ViewBag.AddressPostalcode"></select>
            <span asp-validation-for="Address.AddressPostalcode" class="text-danger" style="font-size: 0.9em;"></span>
        </div>

        <div style="text-align: center;">
            <input type="submit" value="Save" style="padding: 10px 20px; background-color: #3498db; color: white; border: none; border-radius: 5px;" />
        </div>
    </form>

    <div style="text-align: center; margin-top: 20px;">
        <a asp-page="./Index" style="color: #3498db; text-decoration: none;">&#8592; Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
