@page
@model ZealandZooCase.Pages.AccountPages.RegisterModel
@{
}


<h3 class="alert-danger"> @Model.Error</h3>
<div class="container d-flex flex-column align-items-center justify-content-center vh-100 bg-light p-5 rounded-4 shadow-lg">

    <h2 class="display-5 fw-bold text-success mb-4">📝 Register</h2>

    <form method="post" class="w-100" style="max-width: 450px;">
        <div class="mb-3">
            <label for="Username" class="form-label">Username</label>
            <input type="text" class="form-control" id="Username" name="Username" required />
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" required />
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" id="WantsNewsletter" name="WantsNewsletter" />
            <label class="form-check-label" for="WantsNewsletter">
                Sign up for our newsletter
            </label>
        </div>

        <button type="submit" class="btn btn-success btn-lg w-100">Register</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger mt-3 fw-semibold">@Model.ErrorMessage</p>
    }
</div>