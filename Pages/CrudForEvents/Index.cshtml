<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllOurEvent[0].EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllOurEvent[0].EventDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllOurEvent[0].EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllOurEvent[0].EventMaxAttendance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllOurEvent[0].EventTicketPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllOurEvent[0].EventImageName)
